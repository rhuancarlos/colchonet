<h1><%= t 'rooms.show.title' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t 'rooms.show.title' %></th>
      <th><%= t 'rooms.show.location' %></th>
      <th><%= t 'rooms.show.description' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.location %></td>
        <td><%= room.description %></td>
        <td><%= link_to t('links.show'), room %></td>
        <td><%= link_to t('links.edit'), edit_room_path(room) %></td>
        <td>
          <%= link_to t('links.destroy'), room,  method: :delete, data: { confirm: 'Deseja remover este registro ?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<footer>
  <div id="footer-main">
    <strong>
    <%= link_to t('rooms.new.insert'), new_room_path %>
    </strong>
  </div>
</footer>
